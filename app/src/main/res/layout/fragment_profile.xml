<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/group_17"
    tools:context=".ProfileFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="User Profile"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="373dp"
        android:layout_height="393dp"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="24dp"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editProfileBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_13"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Username :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Username: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Fullname :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvFullname"
                    android:layout_width="182dp"
                    android:layout_height="53dp"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Fullname: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Password :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvPassword"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Password: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Email :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Email: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Address :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Address: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Gender :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="178dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Gender: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangle_14"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Phone Number :"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvPhoneNum"
                    android:layout_width="186dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/manrope_extrabold"
                    android:padding="15dp"
                    android:text="Phone Number: "
                    android:textAlignment="textEnd"
                    android:textColor="#7C7777"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/editProfileBtn"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="37dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="editprofile"
        android:src="@drawable/group_22"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <TextView
        android:id="@+id/textViewUID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="172dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="171dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Unique ID"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/tvUniqueID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="169dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="170dp"
        android:fontFamily="@font/manrope_extrabold"
        android:text="000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewUID" />

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/circular_background"
        android:contentDescription="User Profile Picture"
        android:scaleType="centerCrop"
        android:src="@drawable/profileicon"
        app:layout_constraintBottom_toBottomOf="@+id/tvUniqueID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewUID" />


</androidx.constraintlayout.widget.ConstraintLayout>
